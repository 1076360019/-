/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 0px;
  color: rgb(223, 47, 47);
  border:solid 1px #e6d81f;
  width: 99.5%;
  top: 50%;
  text-align:center;
  font-size: 60rpx;
}

.lock {
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  box-sizing: border-box;
  align-items: center;
}

.lock image {
  width: 80%;
}

.lock .tip {
  width: 100%;
  position: absolute;
  top: 300rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  box-sizing: border-box;
  align-items: center;
  text-align: center;
}